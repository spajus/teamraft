<h1>Signup#company</h1>
<p>Find me in app/views/signup/company.html.erb</p>

<% if @company.errors.any? || @person.errors.any? %>
  Sorry: <%= @company.errors.messages.entries.join %><%= @person.errors.messages.entries.join %>
<% end %>
<%= form_tag do %>
  <%= label_tag 'Company Name' %>
  <%= text_field_tag 'company[name]', @company.name %>
  <%= label_tag 'Your Name' %>
  <%= text_field_tag 'person[name]', @person.name %>
  <%= label_tag 'Your Email' %>
  <%= email_field_tag 'person[email]', @person.email %>
  <%= label_tag 'Your Password' %>
  <%= password_field_tag 'person[password]' %>
  <%= submit_tag %>
<% end %>
