<% if person.errors.any? %>
  Sorry: <%= person.errors.messages.entries.join %>
<% end %>
<%= form_tag do %>
  <%= label_tag 'Company Name' %>
  <%= company.name %>
  <%= label_tag 'Name' %>
  <%= text_field_tag 'person[name]', person.name %>
  <%= label_tag 'Email' %>
  <%= email_field_tag 'person[email]', person.email %>
  <% unless person_signed_in? %>
    <%= label_tag 'Password' %>
    <%= password_field_tag 'person[password]' %>
  <% end %>
  <%= submit_tag %>
<% end %>

