<table class="table person-card large-person-card">
  <tr>
    <td class="large-person-pic"><%= image_tag photo_url(@person, size: 256), class: 'img-person img-person-large img-circle' %></td>
    <td class="person-data">
      <h1><%= @person.name %></h1>
      <table class="table table-striped">
        <tr>
          <td width="10%"><%= icon('tags', 'Tags') %></td>
          <td><%= render partial: 'people/person_tag', collection: @person.tags %> </td>
        </tr>
        <tr>
          <td><%= icon('envelope-o', 'Email') %></td>
          <td><%= @person.email %></td>
        </tr>
        <%= render partial: 'people/person_attribute', collection: @company.attribute_types, locals: { person: @person }%>
      </table>
    </td>
  </tr>
</table>
