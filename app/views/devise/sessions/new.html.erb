<div class="row">
  <div class="col-md-6">
    <div class="jumbotron">
      <h1>Sign in</h1>
      <%= render "devise/shared/links" %>
    </div>
  </div>
  <div class="col-md-6">
    <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), role: 'form') do |f| %>

      <div class="form-group">
        <%= f.label :email %>
        <%= f.email_field :email, :autofocus => true, class: 'form-control' %>
      </div>

      <div class="form-group <%= error_class @person, :name %>">
        <%= f.label :password %>
        <%= f.password_field :password, class: 'form-control' %>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div class="form-group <%= error_class @person, :email %>">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end -%>

      <%= f.button 'Sign In', type: 'submit', class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>


