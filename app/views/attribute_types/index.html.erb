<% if @attribute_types.empty? %>
  No attribute types available for your company, create some!
<% end %>


<div class="panel panel-default">
  <div class="panel-heading"><h1 class="panel-title">Person attribute types</h1></div>
  <div class="panel-body">
    <table class="table">
      <thead>
        <tr>
          <th>Icon</th>
          <th>Name</th>
          <th>Type</th>
          <th>Hint</th>
          <th>Required?</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <%= render @attribute_types %>
      </tbody>
    </table>
  </div>
</div>

<div class="row">
  <div class="col-md-6">
    <div class="jumbotron">
      <h1>Add new attribute type</h1>
    </div>
  </div>
  <div class="col-md-6">
    <%= form_for(@new_attribute_type, role: 'form') do |f| %>

      <div class="form-group">
        <%= f.label :attribute_name %>
        <%= f.text_field :attribute_name, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :attribute_type %>
        <%= f.select :attribute_type, options_for_select(AttributeType::TYPES), {}, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :description %>
        <%= f.text_field :description, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.check_box :required %>
        <%= f.label :required %>
      </div>

      <%= f.button 'Add new', type: 'submit', class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>
