<!-- Static navbar -->
<div class="navbar navbar-default" role="navigation">
  <div class="navbar-header">
    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
      <span class="sr-only">Toggle navigation</span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
    </button>
    <% if person_signed_in? %>
      <a class="navbar-brand" href="/"><%= current_person.company.name %> <span class="grey">| Dat Face</span></a>
    <% else %>
      <a class="navbar-brand" href="/">Dat Face</a>
    <% end %>
  </div>
  <div class="navbar-collapse collapse">
    <form class="navbar-form navbar-left" role="search">
      <div class="form-group">
        <input type="text" class="form-control" placeholder="Search">
      </div>
    </form>
    <ul class="nav navbar-nav navbar-right">
      <% if current_person.try :admin? %>
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown">Administration <b class="caret"></b></a>
          <ul class="dropdown-menu">
            <li><%= link_to 'Add a person', person_register_path %></li>
            <li><%= link_to 'Edit company', edit_company_path %></li>
            <li><%= link_to 'People', new_person_session_path %></li>
          </ul>
        </li>
      <% end %>
      <li class="dropdown">
      <% if person_signed_in? %>
        <a href="#" class="dropdown-toggle" data-toggle="dropdown"><%= current_person.name %> <b class="caret"></b></a>
        <ul class="dropdown-menu">
          <li> <%= link_to 'My Profile', root_path %> </li>
          <li class="divider"></li>
          <li> <%= link_to 'Logout', destroy_person_session_path, method: 'delete' %> </li>
        </ul>
      <% else %>
        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Sign Up <b class="caret"></b></a>
        <ul class="dropdown-menu">
          <li><%= link_to 'Register your company', company_register_path %></li>
          <li><%= link_to 'Login', new_person_session_path %></li>
        </ul>
      <% end %>
      </li>
    </ul>
  </div><!--/.nav-collapse -->
</div>
